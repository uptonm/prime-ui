{
  "name": "prime-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest --watch",
    "loki:test": "loki test",
    "loki:test:ci": "loki --requireReference --reactUri file:./storybook-static",
    "loki:commit": "loki update",
    "storybook": "start-storybook --port 6006",
    "storybook:build": "build-storybook -s public",
    "storybook:deploy": "storybook-to-ghpages",
    "svgr": "svgr -d src/temp/dest/ src/temp/source/"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@storybook/addon-docs": "^5.2.8",
    "@storybook/addon-knobs": "^5.2.8",
    "@storybook/addon-storysource": "^5.2.8",
    "@storybook/addon-viewport": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/api": "^5.2.8",
    "@storybook/components": "^5.2.8",
    "@storybook/core-events": "^5.2.8",
    "@storybook/preset-scss": "^1.0.2",
    "@storybook/preset-typescript": "^1.2.0",
    "@storybook/react": "^5.2.8",
    "@storybook/storybook-deployer": "^2.8.1",
    "@storybook/theming": "^5.2.8",
    "@svgr/cli": "^5.0.0",
    "@types/enzyme": "^3.10.4",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "jest": "^24.9.0",
    "loki": "^0.18.1",
    "react-docgen-typescript-loader": "^3.6.0",
    "storybook-dark-mode": "^0.2.0",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-pro": "^5.12.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.25",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-hamburger-menu": "^0.0.3",
    "enzyme-to-json": "^3.4.3",
    "node-sass": "^4.13.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hamburger-menu": "^1.1.1",
    "react-scripts": "3.3.0",
    "typescript": "~3.7.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "loki": {
    "chromeSelector": ".wrapper > *, #root > *",
    "configurations": {
      "chrome.macbook": {
        "target": "chrome.docker",
        "preset": "Retina Macbook Pro 15"
      },
      "chrome.laptop": {
        "target": "chrome.docker",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false
      },
      "chrome.iphone7": {
        "target": "chrome.docker",
        "preset": "iPhone 7",
        "mobile": true
      }
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
